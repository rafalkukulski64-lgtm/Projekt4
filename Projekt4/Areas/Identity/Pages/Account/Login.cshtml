@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="auth-wrapper d-flex align-items-center justify-content-center">
    <div class="auth-card card shadow-sm" style="max-width: 420px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <i class="fas fa-user-lock me-2"></i> Zaloguj się
        </div>
        <div class="card-body">
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Hasło</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                    <label class="form-check-label" for="rememberMeCheck">Zapamiętaj mnie</label>
                </div>
                <button id="login-submit" type="submit" class="w-100 btn btn-primary">
                    <i class="fas fa-sign-in-alt me-1"></i> Zaloguj
                </button>
                <div class="mt-3 text-center small">
                    <p class="mb-1">
                        <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    </p>
                    <p class="mb-1">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nie masz konta? Zarejestruj się</a>
                    </p>
                    <p class="mb-0">
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij ponownie potwierdzenie email</a>
                    </p>
                </div>
            </form>
        </div>
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="card-footer bg-light">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary me-2 mt-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <i class="fas fa-fingerprint me-1"></i>@provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
